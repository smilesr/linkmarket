<h1> LinkMarket - Comment Page </h1>

<div>
  <%= link_to "Back", :root, class: 'btn btn-primary btn-xs' %>
</div>

<div>
  <%= link_to "Home", :root %>

<h2><%= link_to @link.title, @link.destination %></h2>

<%= form_tag(comments_create_path) do %>
  <div class="form-group">
    <%= label_tag(:content, "Comment: ") %>
    <br/>
    <%= text_area_tag(:content, nil, rows: 20, cols: 60) %>
  </div>

  <div><%= submit_tag 'Save', class: 'btn btn-danger' %></div>

  <div>
    <ul>
    <% @all_comments.each do |comment| %>
      <li><%= comment.content %></li>
      <li><%= <time datetime="YYYY-MM-DDThh:mm:ssTZD">comment.created_at %></li>
      DATETIME - format: YYYY-MM-DD HH:MI:SS
      <br>
    <% end %>
    </ul>
  </div>

<% end %>
