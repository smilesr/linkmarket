<h1> LinkMarket - Post a Link Page </h1>

<% form_tag(links_new_path) do %>
  <div>
    <%=label_tag(:title, "Title:")%>
    <%=text_field_tag(:title, @link.title, size: 40)%>
    <br>
    <%=label_tag(:destination, "Link:")%>
    <%=url_field_tag(:destination, @link.destination, size: 40)%>

  <div><%= submit_tag 'Save', class: 'btn btn-default' %></div>

  <% end %>