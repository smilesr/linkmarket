<h1>Register Your Email and Password</h1>

<%= form_tag(@action, method: :post) do %>

  <div>
    <%= label_tag(:email, "Email: ") %>
    <%= text_field_tag(:email, nil, size: 40) %>
  </div>

  <div>
    <%= label_tag(:password, "Password: ") %>
    <%= password_field_tag(:password) %>
  </div>

  <%= submit_tag("Register!") %>
<% end %>

<div>
  <%= link_to "Back", :back %>
</div>
